<div class="row">
  <div class="col-md-6">

    <% unless devise_error_messages!.length == 0 %>
      <div class="alert alert-danger">
        <div class="lead buffer-bottom">
          <%= devise_error_messages! %>
        </div>
      </div>
    <% end %>

    <div class="panel panel-default buffer-both">

      <div class="panel-heading" >
        <h1 class="panel-title"><strong>Регистрация нового пользователя</strong></h1>
      </div>

      <div class="panel-body buffer-both">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>



            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em>(минимум <%= @minimum_password_length %> знаков)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>

            </div>

            <div class="actions">
              <%= f.submit 'Зарегистрироваться', class: 'btn btn-primary'  %>
            </div>
        <% end %>

      </div>

      <div class="panel-footer">
        <%= render "devise/shared/links" %>
      </div>

    </div>

  </div>
</div>





