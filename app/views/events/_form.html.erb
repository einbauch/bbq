<%# Паршиал отображения формы создания нового события %>
<%= form_for(@event) do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: @event} %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :datetime %>
      <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :pincode %>
      <%= f.text_field :pincode, class: 'form-control' %>
    </div>

    <div class="actions buffer-bottom">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'вернуться', :back %>
      <% if @event.id? %>
      <%= link_to 'Удалить мероприятие', event_path(@event), class: 'btn btn-danger', style: 'float: right',
                  method: :delete, data: {confirm: 'Точно удалить мероприятие?'} %>
      <% end %>
    </div>
<% end %>